# phpBB Quick Activation in Profile
# Autor : Moritz Schmidt, 2025-04-01

root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{php,js,css,json,html,txt,md,yml}]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.{txt,md,yml}]
trim_trailing_whitespace = false

[*.{json,yml}]
indent_style = space